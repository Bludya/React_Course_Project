{{#if isAdmin}}

<h1>Teams</h1>
<h3>Manage Users</h3>
<div class="form">
 <form action="/teams/manage" method="post">
   <label>User</label>
   <select name="userId">
     {{#each users}}
     <option value="{{_id}}">{{username}}</option>
     {{/each}}
   </select>
   <label>Team</label>
   <select name="teamId">
     {{#each teams}}
     <option value="{{_id}}">{{name}}</option>
     {{/each}}
   </select>
   <input type="submit" value="Distribute">
 </form>
</div>

{{else}}

<h1>Teams</h1>
<form class="search">
 <label>Seach: </label>
 <input type="text" name="search">
 <input type="submit" value="Search">
</form>

<div class="teams">
{{#each teams}}
 <div class="team">
   <h2>{{name}}</h2>
   <div class="team-info">
     {{#if members}}
     <h3>Members</h3>
     {{#each members}}
     <p>{{firstName}} {{lastName}}</p>
     {{/each}}
     {{else}}
     <p>Team has no members</p>
     {{/if}}
   </div>
   <div class="team-info">
     <h3>Projects</h3>
     {{#if projects}}
       {{#each projects}}
          <p>{{name}}</p>
       {{/each}}
     {{else}}
      <p>Team has no projects</p>
     {{/if}}
   </div>
 </div>
 {{/each}}
</div>

{{/if}}
